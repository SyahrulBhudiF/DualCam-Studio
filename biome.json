{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**"],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"**/*.json",
			"**/*.css",
			"!**/node_modules/**",
			"!**/dist/**",
			"!**/build/**",
			"!**/.vscode/**",
			"!**/components/ui/**",
			"!**/components/data-table/**",
			"!**/routeTree.gen.ts"
		]
	},
	"linter": {
		"enabled": true,
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"!**/node_modules/**",
			"!**/dist/**",
			"!**/build/**",
			"!**/.vscode/**",
			"!**/components/ui/**",
			"!**/components/data-table/**",
			"!**/routeTree.gen.ts"
		],
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": {
					"level": "off"
				}
			},
			"suspicious": {
				"useIterableCallbackReturn": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
